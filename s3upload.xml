<tool id="S3UploadClient" name="Amazon S3 Upload">
	<description>Upload files from Galaxy to Amazon S3</description>
	<command interpreter="python">aws.py $accesskey $secretkey $bucket $remotefile $localfile u $__user_email__</command>
	<inputs>
		<param name="accesskey" type="text" size="20" label="Amazon AWS Access Key"/>
		<param name="secretkey" type="text" size="40" label="Amazon AWS Secret Access Key"/>
		<param name="bucket" type="text" label="Bucket to be worked with"/>
		<param name="remotefile" type="text" label="File name on S3"/>
		<param name="localfile" type="text" label="File name on Galaxy"/>
	</inputs>
	<outputs>
		<data format="input" name="s3client_output" />
	</outputs>
	
	<help>
		This tool uploads files to Amazon S3.
	</help>
 </tool>
 
